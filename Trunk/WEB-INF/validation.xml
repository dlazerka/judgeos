<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>
    <global>
		<constant>
			<constant-name>username</constant-name>
			<constant-value>^[a-zA-Z][0-9a-zA-Z]*$</constant-value>
		</constant>
	</global>

    <formset>
		<form name="ProfileSignUpForm">
			<field property="username" depends="required,mask">
					<arg key="profile.username"/>
					<var>
						<var-name>mask</var-name>
						<var-value>${username}</var-value>
					</var>
			</field>
			<field property="password" depends="required,mask">
					<arg key="profile.password"/>
					<var>
						<var-name>mask</var-name>
						<var-value>${username}</var-value>
					</var>
			</field>
		</form>
		<form name="ProfileLogInForm">
			<field property="username" depends="required,mask">
					<arg key="profile.username"/>
					<var>
						<var-name>mask</var-name>
						<var-value>${username}</var-value>
					</var>
			</field>
			<field property="password" depends="required,mask">
					<arg key="profile.password"/>
					<var>
						<var-name>mask</var-name>
						<var-value>^[0-9a-zA-Z]+$</var-value>
					</var>
			</field>
		</form>
    </formset>
</form-validation>
