<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>
	<global>
		<constant>
			<constant-name>codename</constant-name>
			<constant-value>^[a-zA-Z][0-9a-zA-Z_-]*$</constant-value>
		</constant>
	</global>

    <formset>
		<form name="AccountSignUpForm">
			<field property="dataAttached" depends="required"/>
			
			<field property="codename" depends="required,mask">
				<arg key="account.codename"/>
				<var>
					<var-name>mask</var-name>
					<var-value>${codename}</var-value>
				</var>
			</field>
			<field property="password" depends="required,mask">
				<arg key="account.password"/>
				<var>
					<var-name>mask</var-name>
					<var-value>${codename}</var-value>
				</var>
			</field>
		</form>

		<form name="AccountLogInForm">
			<field property="dataAttached" depends="required"/>

			<field property="codename" depends="required,mask">
				<arg key="account.codename"/>
				<var>
					<var-name>mask</var-name>
					<var-value>${codename}</var-value>
				</var>
			</field>
			<field property="password" depends="required,mask">
				<arg key="account.password"/>
				<var>
					<var-name>mask</var-name>
					<var-value>^[0-9a-zA-Z]+$</var-value>
				</var>
			</field>
		</form>
    </formset>
</form-validation>
