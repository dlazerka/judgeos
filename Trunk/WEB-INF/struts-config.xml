<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
	"http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>

	<form-beans>
		<form-bean
			name="AccountSignUpForm"
			type="org.judgeos.controller.SignUpForm"
		>
			<form-property name="dataAttached" type="java.lang.String" />
			<form-property name="firstName" type="java.lang.String" />
			<form-property name="lastName" type="java.lang.String" />
			<form-property name="codename" type="java.lang.String" />
			<form-property name="password" type="java.lang.String" />
		</form-bean>
		<form-bean
			name="AccountLogInForm"
			type="org.judgeos.controller.LogInForm"
		>
			<form-property name="dataAttached" type="java.lang.String" />
			<form-property name="codename" type="java.lang.String" />
			<form-property name="password" type="java.lang.String" />
		</form-bean>
	</form-beans>


	<global-exceptions>
	</global-exceptions>

	<global-forwards>
		<forward name="root" path="/index.jsp" />
		<forward name="login" path="/account/login.jsp" />
	</global-forwards>


	<action-mappings>
		<action
			path="/account/signup"
			type="org.judgeos.controller.SignUpAction"
			name="AccountSignUpForm"
			scope="request"
			validate="true"
			input="/account/signup.jsp"
		>
			<forward name="success" path="/account/login.do"/>
			<forward name="failure" path="/account/signup.jsp" />
		</action>
		<action
			path="/account/login"
			type="org.judgeos.controller.LogInAction"
			name="AccountLogInForm"
			scope="request"
			validate="true"
			input="/account/login.jsp"
		>
			<forward name="success" path="/account/profile.jsp" redirect="true"/>
			<forward name="failure" path="/account/login.jsp" />
		</action>
		<action
			path="/account/logout"
			type="org.judgeos.controller.LogOutAction"
		>
			<forward name="success" path="/index.jsp" redirect="true"/>
		</action>
		<action
			path="/account"
			forward="/account/profile.jsp"
		/>
		<action
			path="/contest"
			forward="/contest/info.jsp"
		/>
	</action-mappings>


	<controller processorClass="org.apache.struts.tiles.TilesRequestProcessor"/>


	<message-resources parameter="org.judgeos.MessageResources" />


	<plug-in className="org.apache.struts.tiles.TilesPlugin" >
		<set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml" />
		<set-property property="moduleAware" value="true" />
	</plug-in>

	<plug-in className="org.apache.struts.validator.ValidatorPlugIn">
		<set-property
			property="pathnames"
			value="/WEB-INF/validator-rules.xml,/WEB-INF/validation.xml"
		/>
	</plug-in>

</struts-config>

