<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
         version="2.4">


	<display-name>JudgeOS</display-name>


	<welcome-file-list>
		<welcome-file>.do</welcome-file>
	</welcome-file-list>


	<!-- Redefine default servlet to prevent directory listings -->
	<servlet>
	    <servlet-name>org.judgeos.default</servlet-name>
	    <servlet-class>org.apache.catalina.servlets.DefaultServlet</servlet-class>
	    <init-param>
	        <param-name>debug</param-name>
	        <param-value>0</param-value>
	    </init-param>
	    <init-param>
	        <param-name>listings</param-name>
	        <param-value>false</param-value>
	    </init-param>
	    <load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
	    <servlet-name>org.judgeos.default</servlet-name>
	    <url-pattern>/</url-pattern>
	</servlet-mapping>


	<!-- JSP servlet -->
	<servlet>
		<servlet-name>org.judgeos.jsp</servlet-name>
		<servlet-class>org.apache.jasper.servlet.JspServlet</servlet-class>
		<init-param>
			<param-name>fork</param-name>
			<param-value>false</param-value>
		</init-param>
		<init-param>
			<param-name>xpoweredBy</param-name>
			<param-value>false</param-value>
		</init-param>
		<load-on-startup>3</load-on-startup>
	</servlet>


	<!-- JSP -->
	<servlet-mapping>
		<servlet-name>org.judgeos.jsp</servlet-name>
		<url-pattern>*.jsp</url-pattern>
	</servlet-mapping>
	<!-- JSP Fragments-->
	<servlet-mapping>
		<servlet-name>org.judgeos.jsp</servlet-name>
		<url-pattern>*.jspf</url-pattern>
	</servlet-mapping>
	<!-- JSPX -->
	<servlet-mapping>
		<servlet-name>org.judgeos.jsp</servlet-name>
		<url-pattern>*.jspx</url-pattern>
	</servlet-mapping>
	<!-- JSPX Fragments -->
	<servlet-mapping>
		<servlet-name>org.judgeos.jsp</servlet-name>
		<url-pattern>*.jspxf</url-pattern>
	</servlet-mapping>


	<security-constraint>
		<web-resource-collection>
			<web-resource-name>JSP</web-resource-name>
			<description>
				Disable direct access to JSP.
			</description>
			<url-pattern>*.jsp</url-pattern>
			<url-pattern>*.jspf</url-pattern>
			<url-pattern>*.jspx</url-pattern>
			<url-pattern>*.jspxf</url-pattern>
		</web-resource-collection>
		<auth-constraint></auth-constraint>
	</security-constraint>


	<!-- Struts Action Servlet -->
	<servlet>
		<servlet-name>org.judgeos.action</servlet-name>
		<servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
		<init-param>
			<param-name>config</param-name>
			<param-value>/WEB-INF/struts-config.xml</param-value>
		</init-param>
		<init-param>
			<param-name>debug</param-name>
			<param-value>0</param-value>
		</init-param>
		<init-param>
			<param-name>detail</param-name>
			<param-value>2</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>org.judgeos.action</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>


	<!-- for <fmt:*> tags from JSTL -->
	<context-param>
		<param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
		<param-value>org.judgeos.MessageResources</param-value>
	</context-param>


	<!-- Taglibs -->
	<jsp-config>
		<taglib>
			<taglib-uri>/tags/judgeos</taglib-uri>
			<taglib-location>/WEB-INF/judgeos.tld</taglib-location>
		</taglib>
	</jsp-config>


	<!-- for initializing of DataSource through JNDI -->
	<resource-ref>
		<description>
			Resource reference to a factory for java.sql.Connection
			instances that may be used for talking to a particular
			database that is configured in the server.xml file.
		</description>
		<res-ref-name>
			jdbc/judgeos
		</res-ref-name>
		<res-type>
			javax.sql.DataSource
		</res-type>
		<res-auth>
			Container
		</res-auth>
	</resource-ref>


	<!-- Extend session timeout -->
	<session-config>
	    <session-timeout>120</session-timeout>
	</session-config>

</web-app>
